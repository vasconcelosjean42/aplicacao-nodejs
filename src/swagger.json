{
    "openapi": "3.0.0",
    "info": {
        "title": "Aplicação NodeJS",
        "description": "This is an API for a management of users",
        "version": "1.0.0",
        "contact": {
            "email": "vasconcelosjean42@gmail.com"
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "Users"
                ],
                "summary": "Create an user",
                "description": "create a new user",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "User name sample",
                                    "description": "User email sample"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "User already exists"
                    }
                }
            },
            "get": {
                "tags": [
                    "Users"
                ],
                "sumarry": "List all users",
                "description": "List all users only if the admin user to request the date",
                "parameters": [
                    {
                        "in": "header",
                        "name": "user_id",
                        "description": "id of the User",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Sucess",
                        "content": {
                            "application/json": {
                                "type": "array",
                                "item": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "User already exists"
                    },
                    "404": {
                        "description": "User not found"
                    }
                }
            }
        },
        "/users/{user_id}": {
            "patch": {
                "tags": [
                    "Users"
                ],
                "summary": "turn at admin",
                "description": "turn an user at admin",
                "parameters": [
                    {
                        "in": "query",
                        "name": "user_id",
                        "description": "id of the User",
                        "required": true,
                        "type": "string"
                    }
                ]
            }
        }
    }
}